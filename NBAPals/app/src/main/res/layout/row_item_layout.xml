<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeightLarge"
    android:id="@+id/root">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_team_away"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_team_home"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BKN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/image_team_away"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/team_away">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@id/image_team_home"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:id="@+id/team_home">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="108"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/team_away"
        android:layout_alignRight="@id/team_away"
        android:layout_marginTop="1dp"
        android:id="@+id/home_score">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/team_home"
        android:layout_alignLeft="@id/team_home"
        android:layout_marginTop="1dp"
        android:id="@+id/away_score">
    </TextView>

</RelativeLayout>